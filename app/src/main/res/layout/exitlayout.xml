<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exit_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teacher_single_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="教师上下班考勤"
            android:textColor="@color/white"
            android:textSize="44px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="（淮滨中学）"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="247dp"
        android:layout_height="154dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginTop="107px"
        android:background="@drawable/dailog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67px"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="#355498"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/context_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48px"
            android:gravity="center_horizontal"
            android:text="是否退出本系统?"
            android:textColor="#525358"
            android:textStyle="bold"
            android:textSize="34px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_btn_confirm"
                android:layout_width="180px"
                android:layout_height="80px"
                app:srcCompat="@drawable/dialog_confirm" />

            <ImageView
                android:id="@+id/dialog_btn_cancle"
                android:layout_width="180px"
                android:layout_height="80px"
                android:layout_marginLeft="50px"
                app:srcCompat="@drawable/dialog_cancle" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
