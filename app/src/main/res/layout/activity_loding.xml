<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Animator.Loding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <com.edu.fragmentlayout.Animator.Kawaii_LoadingView
            android:id="@+id/Kawaii_LoadingView"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:background="#FFCCFF"
            app:blockColor="#ffffff"

            app:blockInterval="8dp"
            app:fixBlock_Angle="5"
            app:half_BlockWidth="15dp"

            app:initPosition="0"
            app:isClock_Wise="false"
            app:lineNumber="3"

            app:moveBlock_Angle="20"
            app:moveSpeed="500"
            app:move_Interpolator="@android:anim/bounce_interpolator" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开始动画" />

        <Button
            android:visibility="gone"
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="停止动画" />

    </LinearLayout>

</LinearLayout>